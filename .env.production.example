# Production Environment Variables Template
# Copy this file to .env.production and update values for production deployment

# Database - Use production PostgreSQL instance
DATABASE_URL=postgresql://username:password@your-db-host:5432/medusa_prod
STRAPI_DATABASE_URL=postgresql://username:password@your-db-host:5432/strapi_prod

# Stripe - PRODUCTION KEYS (not test keys!)
STRIPE_SECRET_KEY=sk_live_your_live_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email (SMTP) - Production email provider
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=orders@lekkerpurmerend.nl
SMTP_PASS=your-secure-email-password
SMTP_SECURE=true
OWNER_EMAIL=owner@lekkerpurmerend.nl

# Business Settings - Update for production
PICKUP_ADDRESS=Your Actual Business Address, Purmerend
SITE_URL=https://lekkerpurmerend.nl
CUTOFF_TIME=12:00

# Environment
NODE_ENV=production
TZ=Europe/Amsterdam

# Medusa - GENERATE UNIQUE SECURE SECRETS (min 32 chars)
# Use: openssl rand -hex 32
JWT_SECRET=generate-with-openssl-rand-hex-32
COOKIE_SECRET=generate-with-openssl-rand-hex-32
MEDUSA_ADMIN_ONBOARDING_TYPE=default
MEDUSA_ADMIN_ONBOARDING_FLOW_COMPLETED=true

# Redis - Production Redis instance
REDIS_URL=redis://your-redis-host:6379

# Strapi - GENERATE UNIQUE SECURE KEYS
# Use: openssl rand -hex 32
STRAPI_APP_KEYS=key1-hex32,key2-hex32,key3-hex32,key4-hex32
STRAPI_JWT_SECRET=generate-with-openssl-rand-hex-32
STRAPI_ADMIN_JWT_SECRET=generate-with-openssl-rand-hex-32
STRAPI_API_TOKEN_SALT=generate-with-openssl-rand-base64-32
API_TOKEN_SALT=generate-with-openssl-rand-base64-32

# API URLs - Production domains
MEDUSA_BACKEND_URL=https://api.lekkerpurmerend.nl
STRAPI_API_URL=https://cms.lekkerpurmerend.nl/api
STRAPI_URL=https://cms.lekkerpurmerend.nl

# Security Headers (optional)
CORS_ORIGIN=https://lekkerpurmerend.nl
ADMIN_CORS=https://admin.lekkerpurmerend.nl
STORE_CORS=https://lekkerpurmerend.nl